# nginx commands
systemctl [status|start|stop|restart] nginx

# check syntax
nginx -t

# reload nginx
nginx -s reload
or
systemctl daemon-reload

# nginx config files
/etc/nginx/nginx.xonf
/etc/nginx/conf.d/codius.conf

# nginx log files
/var/log/nginx/access.log
/var/log/nginx/error.log

